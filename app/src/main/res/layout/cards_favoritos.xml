<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rectangle_corner"
    android:focusable="true"
    android:clickable="true"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="118dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_marvel"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagem_fav"
            android:layout_width="110dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_homem_aranha"
            android:contentDescription="@string/description_item_favoritado"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textFav"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="@string/quiz_spider_man"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <ImageView
        android:id="@+id/desfavoritar"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/ic_favorito_amarelo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFav" />

    <ImageView
        android:id="@+id/proximo_fav"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="5dp"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/ic_ir_pagina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFav" />
</androidx.constraintlayout.widget.ConstraintLayout>